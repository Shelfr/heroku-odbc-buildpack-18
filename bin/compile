#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo "Installing Microsoft ODBC Driver 18 for SQL Server..."
sudo apt-get update

# Install the ODBC Driver 18 and required tools
sudo ACCEPT_EULA=Y apt-get install -y msodbcsql18 unixodbc-dev

# Verify installation
if command -v odbcinst &> /dev/null; then
    echo "ODBC installed successfully."
else
    echo "ODBC installation failed."
    exit 1
fi

echo "Buildpack installation completed."
